server {
    listen [::]:${AUTH_PORT};
    listen ${AUTH_PORT};

    server_name auth;

    location / {
        proxy_set_header X-Real-IP ${DOLLAR}remote_addr;
        proxy_set_header X-Forward-For ${DOLLAR}proxy_add_x_forwarded_for;
        proxy_set_header Host ${DOLLAR}http_host;

        proxy_pass http://auth_backend:{AUTH_PORT};
    }
}
